# Application
PORT=3000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgres://user:pass@localhost:5432/pupilsync

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h
JWT_COOKIE_EXPIRES_IN=7

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info